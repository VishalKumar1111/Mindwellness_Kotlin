<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#5E00B0FF"
            android:scrollbarAlwaysDrawVerticalTrack="false">

            <ImageView
                android:id="@+id/iv_doc"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/four" />

            <TextView
                android:id="@id/txt_clinic_name"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_doc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Clinic Name" />

            <TextView
                android:id="@+id/txt_clinic"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/txt_clinic_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Clinic" />

            <TextView
                android:id="@id/txt_Doctor_name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_toRightOf="@id/iv_doc"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Doctor Name" />

            <TextView
                android:id="@+id/txt_Course"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_Doctor_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_doc"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Mbbs" />

            <TextView
                android:id="@+id/txt_field"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_Course"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/iv_doc"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Neurology" />

            <TextView
                android:id="@+id/txt_address_full"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/iv_doc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/txt_clinic_name"
                android:background="@drawable/border"
                android:gravity="center"
                android:scrollbars="vertical"
                android:text="adressssssddxjhbdjfgjhgdsfajgdjsgjhgfsdajgfdjgjhgsjagjgfgfhhgfdgdfg" />

            <TextView
                android:id="@+id/txtadress"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/txt_address_full"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/txt_clinic"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Address" />

            <TextView
                android:id="@+id/txt_moNumber"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/iv_doc"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/txt_address_full"
                android:background="@drawable/border"
                android:gravity="center"
                android:hint="Mobile Number " />

            <TextView
                android:id="@+id/txt_mobile"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@id/txt_moNumber"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/txtadress"
                android:background="@drawable/border"
                android:gravity="center"
                android:text="Address" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</RelativeLayout>